<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
     <div class="row">
          <div class="col-xs-4"></div>
              <div class="col-xs-8">
                  <div class="form-group"> 
                      <div class="row">
                          <div class="col-xs-3"><strong>Product Name *</strong></div>
                          <div class="col-xs-4">
                            <%= f.collection_select(:product_id, Product.all.order("drug_name"), :id, :drug_name, {:prompt => false }, class: "form-control") %>
                          </div>
                          <div class="col-xs-4"></div>
                      </div> 
                    </div>
                    <div class="form-group"> 
                      <div class="row">
                          <div class="col-xs-3"><strong>Quantity *</strong></div>
                          <div class="col-xs-4">
                            <%= f.text_field :quantity, type:"text", class: "form-control", placeholder: 'Enter quantity' , required: "true" %>
                          </div>
                          <div class="col-xs-4"></div>
                      </div> 
                    </div>
                      <div class="form-group"> 
                      <div class="row">
                          <div class="col-xs-3"><strong>Price </strong></div>
                          <div class="col-xs-4">
                            <%= f.text_field :price, type:"text", class: "form-control" , readonly: "true" %>
                          </div>
                          <div class="col-xs-4"></div>
                      </div> 
                    </div>
                      <div class="form-group"> 
                      <div class="row">
                          <div class="col-xs-3"><strong>Total Price *</strong></div>
                          <div class="col-xs-4">
                            <%= f.text_field :total_price, type:"text", class: "form-control", placeholder: 'Total Price' , readonly: "true",required: "true" %>
                            <%= f.hidden_field :status,value: "Unprocessed" %>
                          </div>
                          <div class="col-xs-4"></div>
                      </div> 
                    </div>
                    <div class="form-group"> 
                      <div class="row">
                          <div class="col-xs-3"></div>
                          <div class="col-xs-4">
                            <%= f.button "Create", :class => 'btn btn-primary btn-block', id: "submit_btn" %>
                          </div>
                      </div> 
                    </div>
              </div>
       </div>
  
<% end %>
