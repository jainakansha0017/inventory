<p id="notice"><%= notice %></p>

<div class="row" >
  <div class="col-xs-2"></div>
  <div class="col-xs-10">
    <strong style="font-size:24px">Listing Categories</strong>
      
  </div>
</div>
<br>
<table class='table table-bordered table-striped table-condensed' style="margin-left:100px">
  <thead>
    <tr>
      <th colspan='3'>Categories Name</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Edit', edit_category_path(category), style:"color:green" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' },style:"color:green" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div><%= link_to 'Create new Category', new_category_path,style:"color:green;margin-left:90px" %></div>
<br>


